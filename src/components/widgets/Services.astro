---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';
import { Icon } from 'astro-icon/components';

interface Service {
  title: string;
  description: string;
  icon: string;
  features: string[];
  price?: string;
  popular?: boolean;
}

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  services?: Service[];
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: any;
}

const {
  title = 'Our Digital Services',
  subtitle = 'Comprehensive solutions to grow your business online',
  tagline = 'Services',
  services = [
    {
      title: 'Website Development',
      description: 'Modern, responsive websites built with cutting-edge technology. Perfect for businesses looking to establish a strong online presence.',
      icon: 'tabler:world',
      features: ['Custom Design', 'Mobile-First', 'SEO Optimized', 'Fast Loading', 'CMS Integration', '24/7 Support'],
      price: 'From Rs. 25,000'
    },
    {
      title: 'Mobile App Development',
      description: 'Native and cross-platform mobile applications for iOS and Android. We build apps that users love and businesses rely on.',
      icon: 'tabler:device-mobile',
      features: ['iOS & Android', 'Cross-Platform', 'UI/UX Design', 'App Store Optimization', 'Maintenance', 'Updates'],
      price: 'From Rs. 75,000'
    },
    {
      title: 'SEO & Digital Marketing',
      description: 'Drive traffic and increase conversions with our comprehensive digital marketing strategies tailored for the Nepali market.',
      icon: 'tabler:chart-line',
      features: ['Keyword Research', 'Content Strategy', 'Link Building', 'Analytics', 'Monthly Reports', 'ROI Tracking'],
      price: 'From Rs. 15,000/month'
    },
    {
      title: 'E-commerce Solutions',
      description: 'Complete online store development with payment gateways, inventory management, and marketing tools to boost your sales.',
      icon: 'tabler:shopping-cart',
      features: ['Payment Integration', 'Inventory Management', 'Order Processing', 'Security', 'Analytics', 'Marketing Tools'],
      price: 'From Rs. 45,000'
    }
  ],
  id,
  isDark = false,
  classes = {},
  bg,
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <!-- Services Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 mt-16">
    {services.map((service, index) => (
      <div class="group relative">
        <!-- Service Card -->
        <div class="card-hover p-8 h-full relative overflow-hidden">
          <!-- Background gradient on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-slate-800 dark:to-slate-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Floating background elements -->
          <div class="absolute top-4 right-4 w-20 h-20 bg-gradient-primary rounded-full opacity-0 group-hover:opacity-10 transition-all duration-500 blur-xl"></div>
          
          <div class="relative z-10">
            <!-- Icon and Title -->
            <div class="flex items-center mb-6">
              <div class="feature-icon group-hover:animate-pulse-glow">
                <Icon name={service.icon} class="w-full h-full" />
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-gradient transition-all duration-300">
                  {service.title}
                </h3>
                {service.price && (
                  <p class="text-lg font-semibold text-gradient mt-1">{service.price}</p>
                )}
              </div>
            </div>
            
            <!-- Description -->
            <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed group-hover:text-gray-700 dark:group-hover:text-gray-200 transition-colors duration-300">
              {service.description}
            </p>
            
            <!-- Features List -->
            <div class="space-y-3 mb-6">
              {service.features.map((feature, featureIndex) => (
                <div class="flex items-center space-x-3 group-hover:translate-x-2 transition-transform duration-300" style={`transition-delay: ${featureIndex * 0.1}s`}>
                  <div class="w-2 h-2 bg-gradient-primary rounded-full flex-shrink-0"></div>
                  <span class="text-sm text-gray-600 dark:text-gray-400 group-hover:text-gray-800 dark:group-hover:text-gray-200 transition-colors duration-300">
                    {feature}
                  </span>
                </div>
              ))}
            </div>
            
            <!-- CTA Button -->
            <Button
              variant="primary"
              text="Get Started"
              href="/contact"
              class="w-full group-hover:shadow-glow transition-all duration-300"
            />
          </div>
          
          <!-- Decorative corner elements -->
          <div class="absolute top-0 left-0 w-0 h-0 border-l-4 border-t-4 border-transparent border-l-gradient-primary border-t-gradient-primary opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
          <div class="absolute bottom-0 right-0 w-0 h-0 border-r-4 border-b-4 border-transparent border-r-gradient-secondary border-b-gradient-secondary opacity-0 group-hover:opacity-100 transition-all duration-500" style="transition-delay: 0.2s;"></div>
        </div>
        
        <!-- Floating particles -->
        <div class="absolute top-2 right-2 w-3 h-3 bg-gradient-primary rounded-full opacity-0 group-hover:opacity-60 animate-float transition-opacity duration-500"></div>
        <div class="absolute bottom-2 left-2 w-2 h-2 bg-gradient-secondary rounded-full opacity-0 group-hover:opacity-60 animate-float transition-opacity duration-500" style="animation-delay: 1s;"></div>
      </div>
    ))}
  </div>
  
  <!-- Bottom CTA -->
  <div class="text-center mt-16">
    <div class="inline-flex items-center space-x-3 glass px-8 py-4 rounded-full">
      <div class="w-5 h-5 bg-gradient-primary rounded-full animate-pulse"></div>
      <span class="text-lg font-medium text-gray-700 dark:text-gray-300">
        Need a custom solution? <span class="text-gradient font-semibold underline-animated cursor-pointer">Let's discuss your project</span>
      </span>
    </div>
  </div>
</WidgetWrapper> 