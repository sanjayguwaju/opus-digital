---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <!-- Enhanced stats grid with modern cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-16">
    {
      stats &&
        stats.map(({ amount, title, icon }, index) => (
          <div class="group card-hover p-8 text-center intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter" style={`animation-delay: ${index * 0.1}s`}>
            <!-- Animated background glow -->
            <div class="absolute inset-0 bg-gradient-primary rounded-xl opacity-0 group-hover:opacity-5 transition-opacity duration-300 blur-xl"></div>
            
            {icon && (
              <div class="relative mb-6">
                <div class="w-16 h-16 bg-gradient-primary rounded-full flex items-center justify-center mx-auto group-hover:animate-pulse-glow transition-all duration-300">
                  <Icon name={icon} class="w-8 h-8 text-white" />
                </div>
                <!-- Floating particles around icon -->
                <div class="absolute -top-2 -right-2 w-3 h-3 bg-gradient-secondary rounded-full opacity-60 animate-float"></div>
                <div class="absolute -bottom-2 -left-2 w-2 h-2 bg-gradient-tech rounded-full opacity-60 animate-float" style="animation-delay: 1s;"></div>
              </div>
            )}
            
            {amount && (
              <div class="relative mb-4">
                <div class="font-heading text-gradient text-4xl md:text-5xl font-bold dark:text-white group-hover:scale-110 transition-transform duration-300">
                  {amount}
                </div>
                <!-- Animated underline -->
                <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-0 h-1 bg-gradient-primary group-hover:w-full transition-all duration-500"></div>
              </div>
            )}
            
            {title && (
              <div class="text-sm font-semibold uppercase tracking-widest text-gray-700 dark:text-slate-300 lg:text-base group-hover:text-gray-900 dark:group-hover:text-white transition-colors duration-300">
                {title}
              </div>
            )}
            
            <!-- Decorative corner elements -->
            <div class="absolute top-4 left-4 w-2 h-2 bg-gradient-primary rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
            <div class="absolute top-4 right-4 w-2 h-2 bg-gradient-secondary rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300" style="transition-delay: 0.1s;"></div>
            <div class="absolute bottom-4 left-4 w-2 h-2 bg-gradient-tech rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300" style="transition-delay: 0.2s;"></div>
            <div class="absolute bottom-4 right-4 w-2 h-2 bg-gradient-primary rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300" style="transition-delay: 0.3s;"></div>
          </div>
        ))
    }
  </div>
  
  <!-- Achievement badge -->
  <div class="text-center mt-12">
    <div class="inline-flex items-center space-x-2 glass px-6 py-3 rounded-full">
      <div class="w-4 h-4 bg-gradient-primary rounded-full animate-pulse"></div>
      <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
        Trusted by <span class="text-gradient font-semibold">500+</span> businesses worldwide
      </span>
    </div>
  </div>
</WidgetWrapper>
