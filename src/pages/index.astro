---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "Let's build your website together. You're in good hands.",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: 'https://github.com/arthelokyo/astrowind',
        target: '_blank',
        icon: 'tabler:rocket',
      },
      { text: 'Learn more', href: '/why-every-business-needs-a-website-in-2025' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Let’s build your dream website together.
      <span class="hidden xl:inline">Beautifully crafted with</span>
      <span class="text-accent dark:text-white"> Yukti Tech</span>, your trusted digital partner.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        From <span class="font-semibold">startups to enterprises</span>, we design and develop fast, modern, and
        scalable websites that help you stand out online.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Smart. Modern. Reliable.</span>
      Perfect for Businesses, SaaS, Portfolios, Landing Pages & Blogs.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What You Get With Yukti Tech"
    subtitle="Powerful, modern, and scalable websites designed to help your business grow online."
    items={[
      {
        title: 'Modern Tech Stack',
        description:
          'Built with Astro and Tailwind CSS for lightning-fast performance, clean design, and endless customization.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Pre-Built Components',
        description:
          'Ready-to-use, responsive components tailored for Marketing Websites, SaaS platforms, Blogs, Portfolios, and more.',
        icon: 'tabler:components',
      },
      {
        title: 'Industry Best Practices',
        description:
          'We follow secure coding, optimized workflows, and user-first design to deliver high-quality digital experiences.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Blazing Page Speed',
        description:
          'Optimized for Core Web Vitals — ensuring top search rankings, smooth UI/UX, and higher conversions.',
        icon: 'tabler:rocket',
      },
      {
        title: 'SEO-Friendly',
        description:
          'Every website is built with SEO in mind, helping your business rank higher and reach the right audience.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Collaborative Approach',
        description:
          'We value your input and ideas — working with you to create a website that truly represents your brand.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Foundation"
    title="Built with the Right Technology for Your Success"
    items={[
      {
        title: 'Powered by Modern Frameworks',
        description:
          'We use Astro 5.0 — a blazing-fast static site generator that ensures speed, scalability, and developer efficiency.',
      },
      {
        title: 'Styled with Tailwind CSS',
        description:
          'Delivering clean, responsive, and consistent designs — all while making customization faster and easier.',
      },
      {
        title: 'Cross-Browser Optimized',
        description:
          'Your website will look and perform seamlessly across all browsers and devices, ensuring a smooth user experience for everyone.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Modern web design workflow',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on Modern Foundations</h3>
      We combine cutting-edge technology with best practices to give your business a competitive advantage online.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Tailored to Your Brand',
        description: `Every website we build is customized to reflect your unique identity — ensuring your brand stands out online.`,
      },
      {
        title: 'Flexible Layouts',
        description:
          'Choose from multiple design structures to best showcase your content, keeping visitors engaged and improving navigation.',
      },
      {
        title: 'Responsive by Default',
        description:
          'Optimized for all devices and screen sizes — delivering a seamless experience whether your audience is on desktop, tablet, or mobile.',
      },
      {
        title: 'Rich Media Integration',
        description:
          'Enhance your storytelling with images, videos, and interactive content that captivate and connect with your audience.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Custom website blueprint',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Your Website, Your Way</h3>
      Ensure your online presence truly represents your brand and connects with your audience.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Engaging User Experience',
        description:
          'Keep your visitors interested with interactive features, smooth navigation, and modern layouts that encourage them to stay longer.',
      },
      {
        title: 'Future-Proof Solutions',
        description:
          'We continuously refine and update your website so it stays aligned with the latest trends, technologies, and user expectations.',
      },
      {
        title: 'Fast & Efficient Delivery',
        description:
          'Save valuable time and resources with our streamlined process — launching your website quickly without compromising quality.',
      },
      {
        title: 'Ongoing Support',
        description: `We provide reliable guidance and assistance whenever you need it — ensuring you’re never alone on your digital journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration for growth',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Designed to Foster Growth and Success
      </h3>
      We focus on building websites that evolve with your business, keeping you competitive in a fast-changing digital world.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Launch Your Dream Website in Just a Few Simple Steps"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery</span>',
        description:
          'We start with a strategy call to understand your goals, audience, and vision. This ensures we create a website tailored perfectly to your brand.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Content & Design</span>',
        description:
          'Our team designs engaging layouts and adds your content — images, copy, and multimedia — to bring your story to life.',
        icon: 'tabler:layout',
      },
      {
        title: 'Step 3: <span class="font-medium">Customization</span>',
        description:
          'We fine-tune the styles, colors, and functionality to match your unique identity and deliver a smooth, responsive experience.',
        icon: 'tabler:paint',
      },
      {
        title: '<span class="font-medium">Step 4: Launch!</span>',
        description:
          'Once everything looks perfect, we launch your website — fast, secure, and optimized to grow with your business.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Website launch process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Essential Website Sections"
    subtitle="We include all the key components your website needs for impact, usability, and conversions."
    tagline="Components"
    items={[
      {
        title: 'Headers',
        description:
          'Clear and structured navigation ensures visitors know exactly where to go from the moment they land on your site.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Hero Sections',
        description:
          'Make a strong first impression with visually stunning hero sections that capture attention and communicate your brand instantly.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Features',
        description:
          'Highlight your products, services, and unique value with dedicated feature sections that showcase what sets you apart.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Content Blocks',
        description:
          'Engage your audience with well-structured content sections designed for readability, storytelling, and SEO performance.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Call-to-Action',
        description:
          'Guide visitors toward the next step with clear and persuasive CTAs, designed to boost conversions and engagement.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Pricing Tables',
        description:
          'Transparent and attractive pricing layouts help your customers make decisions quickly and confidently.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Testimonials',
        description:
          'Build trust and credibility with real customer stories, showcasing the positive impact of your work.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Contact Forms',
        description:
          'Make it easy for clients to reach out with user-friendly forms that encourage inquiries and stronger connections.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Footers',
        description:
          'Provide quick access to key links, contact info, and brand details with professional and functional footers.',
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore Our Insights & Tips"
    information={`
    Stay updated with the latest trends, tips, and best practices in web design, digital marketing, and business growth.
    Each article is designed to help you make smarter decisions, improve your online presence, and grow your brand.
    Learn actionable strategies from our experts to create a website that not only looks great but delivers results.
  `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to the most common questions about our website design and development services."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why should I choose your company for my website?',
        description:
          'We combine modern technology, creative design, and marketing-focused strategies to build websites that not only look great but drive results for your business.',
      },
      {
        title: 'What do I need to get started?',
        description:
          'Just share your brand details, goals, and any existing content or ideas. We guide you through the rest, making the process smooth and stress-free.',
      },
      {
        title: 'How long does it take to launch a website?',
        description:
          'Depending on the complexity, most websites are designed, developed, and launched within 4–6 weeks. We ensure quality without unnecessary delays.',
      },
      {
        title: 'Can I update my website myself after launch?',
        description:
          'Absolutely! We build websites with easy-to-use CMS solutions or provide training, so you can manage content, images, and pages on your own.',
      },
      {
        title: 'Do you provide ongoing support?',
        description:
          'Yes, we offer maintenance and support packages to keep your website secure, up-to-date, and performing optimally.',
      },
      {
        title: 'Will my website be optimized for search engines?',
        description:
          'Every website we build follows SEO best practices, ensuring better visibility, faster load times, and higher chances of ranking well on Google.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Websites Delivered', amount: '250+' },
      { title: 'Happy Clients', amount: '180+' },
      { title: 'Years of Experience', amount: '5+' },
      { title: 'Industries Served', amount: '20+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title"> Launch Your Dream Website Today </Fragment>

    <Fragment slot="subtitle">
      Work with our expert team to create a stunning, responsive, and high-performing website tailored to your business
      goals. Get started now and see your online presence come to life.
    </Fragment>
  </CallToAction>
</Layout>
