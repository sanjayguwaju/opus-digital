---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing - Affordable Digital Solutions in Nepal',
  description: 'Transparent pricing for professional digital services. Choose from our flexible packages designed for businesses of all sizes. Quality solutions at competitive Nepali market rates.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing Plans"
    title="Transparent Pricing for Every Business"
    subtitle="Choose the perfect package that fits your budget and business needs. All our plans include professional quality and ongoing support."
  />

  <!-- Pricing Widget ******************* -->

  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-50 via-transparent to-transparent dark:from-slate-900 dark:via-slate-900/50 dark:to-transparent"></div>
    <Prices
      title="Choose Your Perfect Package"
      subtitle="Transparent pricing with no hidden fees"
      classes={{
        container: 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8',
        title: 'text-4xl md:text-5xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400',
        subtitle: 'text-xl text-gray-600 dark:text-gray-400 mb-12',
        prices: 'gap-8 lg:gap-10',
      }}
      prices={[
        {
          title: 'STARTER PACK',
          subtitle: 'Perfect for small businesses and startups',
          price: '25,000',
        items: [
          {
            description: '✨ Professional Website Design',
          },
          {
            description: '📱 Mobile-Responsive Layout',
          },
          {
            description: '🔍 Basic SEO Setup',
          },
          {
            description: '📨 Contact Form Integration',
          },
          {
            description: '🌐 Social Media Links',
          },
          {
            description: '🛟 1 Month Premium Support',
          },
          {
            description: '🔄 Weekly Backups',
          },
          {
            description: '🚀 Performance Optimization',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: '/contact',
        },
      },
      {
        title: 'PROFESSIONAL',
        subtitle: 'Ideal for growing businesses',
        price: '75,000',
        items: [
          {
            description: '💫 Everything in Starter +',
          },
          {
            description: '🛍️ Full E-commerce Setup',
          },
          {
            description: '📈 Advanced SEO Package',
          },
          {
            description: '📝 Content Management System',
          },
          {
            description: '💳 Payment Gateway Integration',
          },
          {
            description: '📊 Advanced Analytics',
          },
          {
            description: '🎯 Custom Features',
          },
          {
            description: '🛟 3 Months Premium Support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'POPULAR',
      },
      {
        title: 'ENTERPRISE',
        subtitle: 'For large businesses and corporations',
        price: '150,000',
        items: [
          {
            description: '🌟 Everything in Professional +',
          },
          {
            description: '⚡ Custom Web Application',
          },
          {
            description: '🔒 Enterprise Security Suite',
          },
          {
            description: '🌍 Multi-language Support',
          },
          {
            description: '🔄 API Integration & Development',
          },
          {
            description: '⚡ Priority Support (24/7)',
          },
          {
            description: '🛡️ Advanced Security Features',
          },
          {
            description: '🛟 6 Months Premium Support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="What's Included in Every Package"
    subtitle="All our plans come with these essential features and benefits"
    columns={2}
    items={[
      {
        title: 'Professional Design',
        description: 'Modern, responsive designs that look great on all devices and reflect your brand identity.',
        icon: 'tabler:palette',
      },
      {
        title: 'SEO Optimization',
        description: 'Built-in search engine optimization to help your website rank higher and attract more visitors.',
        icon: 'tabler:search',
      },
      {
        title: 'Fast Loading',
        description: 'Optimized code and images ensure your website loads quickly, improving user experience and SEO.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Mobile-First Design',
        description: 'All websites are designed mobile-first, ensuring perfect performance on smartphones and tablets.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Security Features',
        description: 'Built-in security measures to protect your website and your customers\' data.',
        icon: 'tabler:shield',
      },
      {
        title: 'Ongoing Support',
        description: 'We don\'t just build and leave. Get ongoing support and maintenance for your digital success.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Simple 4-Step Process to Get Started"
    tagline="How It Works"
    isReversed={true}
    items={[
      {
        title: 'Free Consultation',
        description: 'Schedule a free consultation to discuss your project requirements and goals.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Custom Quote',
        description: 'Receive a detailed, customized quote based on your specific needs and budget.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Project Approval',
        description: 'Review and approve the proposal, then we begin development immediately.',
        icon: 'tabler:check',
      },
      {
        title: 'Launch & Support',
        description: 'We launch your project and provide ongoing support to ensure long-term success.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Our Process',
    }}
  />

  <!-- Additional Services Section -->
  <div class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-slate-800 dark:to-slate-700 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Additional Services
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Enhance your digital presence with these add-on services
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <astro-icon name="tabler:chart-line" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Digital Marketing</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Comprehensive marketing strategies to grow your online presence</p>
            <p class="text-2xl font-bold text-gradient">From Rs. 15,000/month</p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-secondary rounded-full flex items-center justify-center mx-auto mb-4">
              <astro-icon name="tabler:device-mobile" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Mobile App Development</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Native and cross-platform mobile applications</p>
            <p class="text-2xl font-bold text-gradient">From Rs. 75,000</p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-tech rounded-full flex items-center justify-center mx-auto mb-4">
              <astro-icon name="tabler:tools" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Maintenance & Support</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Ongoing support and maintenance packages</p>
            <p class="text-2xl font-bold text-gradient">From Rs. 5,000/month</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about our pricing and services"
    columns={1}
    items={[
      {
        title: 'Do you offer payment plans or installments?',
        description:
          'Yes, we offer flexible payment plans for larger projects. You can pay 50% upfront and the remaining 50% upon project completion.',
      },
      {
        title: 'What\'s included in the support period?',
        description:
          'Our support includes bug fixes, minor updates, and technical assistance. We\'re here to ensure your website runs smoothly.',
      },
      {
        title: 'Can I upgrade my package later?',
        description:
          'Absolutely! You can upgrade your package at any time. We\'ll work with you to add new features and functionality.',
      },
      {
        title: 'Do you provide hosting and domain services?',
        description:
          'Yes, we can provide hosting and domain services as part of your package, or you can use your existing hosting provider.',
      },
      {
        title: 'How long does it take to complete a project?',
        description:
          'Project timelines vary based on complexity. Simple websites take 2-3 weeks, while complex applications may take 6-8 weeks.',
      },
      {
        title: 'Do you offer maintenance after the project is complete?',
        description:
          'Yes, we offer ongoing maintenance packages to keep your website secure, updated, and performing optimally.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Transform Your Business?"
    subtitle="Get started today with a free consultation. Our team is ready to help you choose the perfect package and bring your digital vision to life."
    actions={[
      {
        variant: 'primary',
        text: 'Get Free Consultation',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  />
</Layout>
