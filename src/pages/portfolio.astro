            <astro-icon name="logos:astro" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Astro</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-[#38bdf8] to-[#818cf8] rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:tailwindcss-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Tailwind</h3>
        </div>

        <!-- Backend -->
        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:nodejs-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Node.js</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:typescript-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">TypeScript</h3>
        </div>

        <!-- Databases -->
        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-green-600 to-green-700 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:mongodb-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">MongoDB</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-700 to-blue-800 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:postgresql" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">PostgreSQL</h3>
        </div>

        <!-- Mobile -->
        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-blue-500 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:react" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">React Native</h3>
        </div>

        <!-- Cloud & DevOps -->
        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:aws" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">AWS</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <astro-icon name="logos:docker-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Docker</h3>
        </div>

        <!-- UI/Design Tools -->
        <div class="text-center group cursor-pointer">
          <div class="w-20 h-20 flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
            <astro-icon name="logos:figma" class="w-full h-full" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Figma</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-red-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 group-hover:shadow-lg">
            <astro-icon name="logos:angular-icon" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Angular</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 group-hover:shadow-lg">
            <astro-icon name="logos:vue" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">Vue.js</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 group-hover:shadow-lg">
            <astro-icon name="logos:javascript" class="w-10 h-10" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white">JavaScript</h3>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 group-hover:shadow-lg">
